@model PessoaGarcon

<form asp-controller="PessoaGarcon" asp-action="Create" method="post" class="row g-3">
    <div class="col-sm-7">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="col-sm">
        <label>CPF</label>
        <input asp-for="CPF" class="form-control" />
    </div>

    <div class="col-sm-7">
        <label>Telefone</label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="col-sm">
        <label>Salario</label>
        <input asp-for="Salario" class="form-control" />
    </div>

    <div class="col-sm-7">
        <label>Comissão(%)</label>
        <input asp-for="Comissao" class="form-control" />
    </div>

    <div class="col-sm">
        <label>Regime Trabalista</label>
        <select asp-for="RegimeTrab" class="form-control">
            <option value="CLT">CLT</option>
            <option value="Freelancer">Freelancer</option>
        </select>
    </div>

    <div class="col-sm-7">
        <label for="Ativo">Ativo</label>

        <select asp-for="Ativo" class="form-control">
            <option value="TRUE">Sim</option>
            <option value="FALSE">Não</option>
        </select>
    </div>

    <div class="col-sm-12" style="padding-top: 10px;">
        <button class="btn btn-primary">Salvar</button>
    </div>

</form>