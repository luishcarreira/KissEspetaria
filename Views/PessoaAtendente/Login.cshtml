@{
    Layout = null;
}

@model PessoaAtendenteViewModel

@if (Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <!DOCTYPE html>
    <html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KissEspetaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style_login.css" />
</head>

<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <div class="brand_logo_container">
                <img src="~/images/logo.png" class="brand_logo" alt="Logo">
            </div>

            <form asp-controller="PessoaAtendente" asp-action="Login" method="post">
                <input type="text" id="login" class="fadeIn second" asp-for="Login" placeholder="login">
                <input type="text" id="senha" class="fadeIn third" asp-for="Senha" placeholder="password">
                <input type="submit" class="fadeIn fourth" value="Login">
            </form>
        </div>
    </div>
</body>

</html>
}
