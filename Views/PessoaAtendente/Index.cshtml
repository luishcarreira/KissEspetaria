@model List<PessoaAtendente>

<br />
@if (Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Telefone</th>
            <th scope="col">Login</th>
            <th scope="col">Salario</th>
            <th scope="col">Administrador</th>
        </tr>
    </thead>
    @foreach (var atendente in Model)
        {
            <tbody>
                <tr>
                    <td>@atendente.PessoaId</td>
                    <td>@atendente.Nome</td>
                    <td>@atendente.CPF</td>
                    <td>@atendente.Telefone</td>
                    <td>@atendente.Login</td>
                    <td>@atendente.Salario</td>
                    <td>@atendente.Admin</td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="/pessoaatendente/delete/@atendente.PessoaId">Apagar</a>
                        <a class="btn btn-sm btn-warning" href="/pessoaatendente/update">Editar</a>
                        <a class="btn btn-sm btn-info" href="/item/meus_pedidos">Meus Pedidos</a>
                    </td>

                </tr>
            </tbody>
        }
    </table>
}
<a class="btn btn-primary" href="/pessoaatendente/create">Adicionar</a>
