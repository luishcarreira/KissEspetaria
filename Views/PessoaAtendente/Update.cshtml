@model PessoaAtendente

<form asp-controller="PessoaAtendente" asp-action="Update" method="POST" class="row g-3">
    <div class="col-sm-7">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="col-sm">
        <label>CPF</label>
        <input asp-for="CPF" class="form-control" />
    </div>

    <div class="col-sm-6">
        <label>Login</label>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="col-sm">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" />
        <span asp-validation-for="Senha"></span>
    </div>

    <div class="col-sm-7">
        <label>Salario</label>
        <input asp-for="Salario" class="form-control" />
    </div>

    <div class="col-sm">
        <label>Telefone</label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="col-sm">
        <label for="Admin">Administrador</label>
        <select asp-for="Admin" class="form-control">
            <option value="TRUE">Sim</option>
            <option value="FALSE">Não</option>
        </select>
    </div>

    <div class="col-sm-12" style="padding-top: 10px;">
        <button class="btn btn-primary">Salvar</button>
    </div>
</form>