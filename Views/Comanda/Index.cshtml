@model List<Comanda>

<br />
@if (Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Atendente</th>
            <th scope="col">Garçom</th>
            <th scope="col">Data Emissão</th>
            <th scope="col">Valor Total</th>
        </tr>
    </thead>
    @foreach (var comanda in Model)
        {
            <tbody>
                <tr>
                    <td>@comanda.ComandaId</td>
                    <td>@comanda.AtendenteId</td>
                    <td>@comanda.GarconId</td>
                    <td>@comanda.DataEmissao</td>
                    <td>@comanda.valorTotal</td>
                    <td>
                        <a class="btn btn-sm btn-info" href="/comanda/detalhes/">Ver</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
<a class="btn btn-primary" href="/comanda/create">Adicionar</a>
